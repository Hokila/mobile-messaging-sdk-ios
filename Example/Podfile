source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

$podName = 'MobileMessaging'

target 'MobileMessagingExample' do
    pod $podName, :path => '../'
end

target 'MobileMessagingExample_Tests' do
    pod $podName, :path => '../'
end

post_install do |installer|
	installer.pods_project.targets.each do |target|
		if target.name == 'MobileMessaging'
			target.build_configurations.each do |config|
				config.build_settings['MODULEMAP_PRIVATE_FILE'] = '${PODS_ROOT}/../../Pod/Classes/Vendor/AFNetworking/module.private.modulemap'
			end
		end
	end
end
